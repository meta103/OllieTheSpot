<img src="/images/OllieTheSpotIcon.png" alt="" class="mb-4 mt-4" width="100" height="100">
<form action="/auth/login" method="POST" class="form-control">
  <h2>Sign in</h2>

  <input type="text" class="form-control mt-5" name="username" placeholder="Username">

  <input type="password" class="form-control" name="password" placeholder="Password">

  <% if (errorMessage) { %>
    <div class="error-message"><%= errorMessage %></div>
  <% } %>

  <button class="btn btn-lg btn-primary btn-block mt-5">Sign in</button>
  
  <p class="mt-5 mb-3 text-muted">
    Don't have an account? <a href="/signup">Sign up</a>

  </p>
</form>




