<form action="/auth/login" method="POST" class="form-control">
  <h2>Login</h2>

  <input type="text" class="form-control mt-5" name="username" placeholder="Username" required>

  <input type="password" class="form-control" name="password" placeholder="Password" required>

  <% if (errorMessage) { %>
    <div class="error-message"><%= errorMessage %></div>
  <% } %>

  <button class="btn btn-lg btn-primary btn-block mt-5">Login</button>
  
  
</form>





