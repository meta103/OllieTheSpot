<img src="/images/OllieTheSpotIcon.png" alt="" class="mb-4 mt-4" width="100" height="100">
<form class="no-display form-control" action="/auth/signup" method="POST">
    <h2>Sign up</h2>

  <input type="text" id="autocomplete-input" class="autocomplete form-control mt-5" name="username" placeholder="Username" required>
  
  <input type="text" id="autocomplete-input" class="autocomplete form-control" name="email" placeholder="myemail@gmail.com" required>
  
  <input type="password" id="autocomplete-input" class="autocomplete form-control" name="password" placeholder="********" required>
    <% if (errorMessage) { %>
      <div class="error-message">
        <%= errorMessage %>
      </div>
    <% } %>
    <button type="submit" class="btn btn-lg btn-primary btn-block mt-5">Create account</button>
</form>
