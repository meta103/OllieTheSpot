<%- include ../partials/_navbar.ejs%>
<h4 class="mt-2"><strong>Edit</strong></h4>
  <hr>
<form action="/users/edit" method="POST" id="form" enctype='multipart/form-data' class="form-control">
  <div class="form-group">    
    <label for="image">Change profile picture</label>
    <input type="file" name="image" />
  </div>
  <div class="form-group">    
    <label for="bio">Biography</label>
    <textarea type="text" name="bio" class="form-control mt-3"><%= currentUser.bio%></textarea>
</div>
  <button class="btn btn-lg btn-primary btn-block mt-5">update</button>
</form>


