<h2 class="mt-3">Add a new spot</h2>
<form action="/spots/new" method="post" class="form-control" enctype='multipart/form-data'>
<input type="file" name="image" required/>  
  <div class="form-group">
    <label for="">Name</label>
    <textarea type="text" name="name" placeholder="Enter the name of the spot" class="form-control mt-3" required></textarea>
  </div>
  <div class="form-group">
    <input type="hidden" name="location" placeholder="Choose the location" id="demo" class="form-control" value="" required></input>
  </div>
  <div class="form-group">
    <input type="hidden" name="city" placeholder="CITY" id="city" class="form-control" value="" required></input>
  </div>
  <div class="form-group">  
    <label for="">Description</label>
    <textarea class="form-control" rows="6" name="description" placeholder="Write a short description of the spot" required></textarea>
  </div>  
<button type="submit" class="btn btn-lg btn-primary btn-block mt-5">Add</button>
</form>



<p id="demo"></p>

<script>
let city = document.getElementById('city');

function callback(data) {
  city.value = data.city;
  console.log(data);
}

var script = document.createElement('script');
script.type = 'text/javascript';
script.src = 'https://geoip-db.com/jsonp';
var h = document.getElementsByTagName('script')[0];
h.parentNode.insertBefore(script, h);

</script>